# Copy this file to .env and customize your settings

# Dokploy API endpoint (where your Dokploy is running)
DOKPLOY_URL=http://dokploy:3000

# Dokploy API authentication (choose ONE method - API key is recommended)
DOKPLOY_API_KEY=your-dokploy-api-key-here        # Recommended: Most secure
# DOKPLOY_TOKEN=your-dokploy-bearer-token-here   # Alternative: Bearer token
# DOKPLOY_SESSION=your-dokploy-session-cookie-here # Fallback: Session cookie (least secure)

# Pangolin Control Plane endpoint
PANGOLIN_URL=http://pangolin:3001

# Pangolin API authentication (choose ONE method - Bearer token is preferred)
PANGOLIN_TOKEN=your-pangolin-bearer-token-here   # Preferred: Official Bearer token
# PANGOLIN_API_KEY=your-pangolin-api-key-here    # Alternative: Will be used as Bearer token

# How often to check for new apps/domains (examples: 30s, 1m, 5m)
POLL_INTERVAL=30s

# Number of times to retry failed API calls
RETRY_ATTEMPTS=3

# How long to wait between retries (examples: 5s, 10s, 30s)
RETRY_DELAY=5s

# Manual execution mode - run once and exit (true/false)
RUN_ONCE=false

# Force sync existing resources (true/false)
FORCE_SYNC=false